<h1>Questions</h1>

<ul>
  <% @questions.each do |question| %>
    <li> 
    <%= link_to question.title, question_path(question) || question.created_at.strftime("%B %d %Y") %> 
    <%= link_to "Edit", edit_question_path(question) %> | <%= link_to "Delete", question, method: :delete, data: { confirm: "You sure?" } %>
    
    </li>
  <% end %>
</ul>

<h1><%= link_to "New Question", "/questions/new", class:"button" %>